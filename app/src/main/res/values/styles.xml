<resources>

    <style name="Activity" parent="MyMaterialTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/windowBackground</item>
    </style>

    <style name="Wrapper" parent="MyMaterialTheme">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/unit2</item>
        <item name="android:background">@color/colorSecondary</item>
    </style>

    <style name="WrapperHeader" parent="MyMaterialTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/unit8</item>
        <item name="android:paddingLeft">@dimen/unit4</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="WrapperContent" parent="MyMaterialTheme">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/unit4</item>
        <item name="android:paddingTop">@dimen/unit1</item>
        <item name="android:paddingRight">@dimen/unit4</item>
        <item name="android:paddingBottom">@dimen/unit1</item>
    </style>

    <style name="ContentRow" parent="MyMaterialTheme">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttonArrow" parent="MyMaterialTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/unit2</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:minWidth">@dimen/unit8</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">false</item> <!-- was set to true, when i copy pastad, find out why-->
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- old styles i plan to deprecate -->

    <style name="DialogWrap" parent="MyMaterialTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffffffff</item>
    </style>

    <style name="TinyHeader" parent="MyMaterialTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="buttonRowItem" parent="MyMaterialTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">#ffb4b6b3</item>
    </style>

</resources>