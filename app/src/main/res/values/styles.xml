<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Wrapper" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/half_standard_padding</item>
        <item name="android:background">@drawable/wrapper</item>
    </style>

    <style name="DialogWrap" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffffffff</item>
    </style>

    <style name="Activity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ffb4b6b3</item>
        <item name="android:paddingRight">@dimen/half_standard_padding</item>
        <item name="android:paddingLeft">@dimen/half_standard_padding</item>
        <item name="android:paddingBottom">@dimen/half_standard_padding</item>
    </style>

    <style name="WrapperHeader" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/standard_padding</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/wrapperheader</item>
    </style>

    <style name="TinyHeader" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="Row" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/standard_padding</item>
        <item name="android:paddingRight">@dimen/standard_padding</item>
        <item name="android:paddingLeft">@dimen/standard_padding</item>
    </style>

    <style name="buttonRowItem" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">#ffb4b6b3</item>
    </style>

</resources>