<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/Activity">

    <LinearLayout
        android:id="@+id/welcome_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/Wrapper"
        android:visibility="gone">

        <TextView
            android:id="@+id/welcome_header"
            android:text="@string/welcome_header"
            style="@style/WrapperHeader"/>

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:padding="@dimen/standard_padding">
        </TextView>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/timeframe_wrapper"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Wrapper">

        <TextView
            android:id="@+id/timeframe_tiny_header"
            android:text="@string/timeframe_header"
            style="@style/TinyHeader" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/timeblocks"
                android:layout_width="0dp"
                android:layout_weight=".30"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/timeframes"
                android:layout_width="0dp"
                android:layout_weight=".70"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/overview_wrapper"
        android:orientation="vertical"
        style="@style/Wrapper"
        android:visibility="gone">

        <TextView
            android:id="@+id/overview_header"
            android:text="@string/summary_title"
            style="@style/WrapperHeader"
            android:layout_marginBottom="@dimen/standard_padding" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/row1"
            android:orientation="horizontal"
            style="@style/Row">

            <TextView
                android:id="@+id/profit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overview_profit"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/profit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/row2"
            android:orientation="horizontal"
            style="@style/Row">

            <TextView
                android:id="@+id/time_played_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overview_time"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time_played"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/row3"
            android:orientation="horizontal"
            style="@style/Row">

            <TextView
                android:id="@+id/hourly_wage_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overview_hourly"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hourly_wage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/history_session_list"
        style="@style/Wrapper"
        android:paddingLeft="@dimen/standard_padding"
        android:paddingRight="@dimen/standard_padding"
        android:visibility="gone">
    </ListView>
</LinearLayout>