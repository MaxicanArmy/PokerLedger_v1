<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Activity"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/welcome_wrapper"
        style="@style/Wrapper"
        android:visibility="gone">

        <TextView
            android:id="@+id/welcome_header"
            android:text="@string/welcome_header"
            style="@style/WrapperHeader"/>

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:padding="@dimen/unit2">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/active_sessions_wrapper"
        android:visibility="gone"
        style="@style/Wrapper">

        <TextView
            android:id="@+id/active_sessions_header"
            android:text="@string/active_games_title"
            style="@style/WrapperHeader"/>

            <ListView
                android:id="@+id/active_sessions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/overview_wrapper"
        android:layout_below="@id/active_sessions_wrapper"
        style="@style/Wrapper">

        <TextView
            android:id="@+id/overview_header"
            android:text="@string/overview_title"
            style="@style/WrapperHeader" />

        <LinearLayout
            android:id="@+id/overview_content"
            style="@style/WrapperContent">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/row1"
                style="@style/ContentRow">

                <TextView
                    android:id="@+id/profit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overview_profit" />

                <TextView
                    android:id="@+id/profit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="#4eb502" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/row2"
                style="@style/ContentRow">

                <TextView
                    android:id="@+id/time_played_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overview_time" />

                <TextView
                    android:id="@+id/time_played"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/row3"
                style="@style/ContentRow">

                <TextView
                    android:id="@+id/hourly_wage_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overview_hourly" />

                <TextView
                    android:id="@+id/hourly_wage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="#4eb502" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/breakdown_wrapper"
        android:layout_below="@id/overview_wrapper"
        style="@style/Wrapper">

        <TextView
            android:id="@+id/breakdown_header"
            android:text="@string/breakdown_title"
            style="@style/WrapperHeader" />

        <LinearLayout
            android:id="@+id/breakdown_content"
            style="@style/WrapperContent">
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>